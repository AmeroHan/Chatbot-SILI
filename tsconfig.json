{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    // "strictNullChecks": false,
    // "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/plugins/*"],
      "$utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
